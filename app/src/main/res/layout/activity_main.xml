            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textview11"
                android:layout_width="295dp"
                android:layout_height="58dp"
                android:inputType="textPersonName"
                android:textColor="#F6F4F4" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutname12"
            android:layout_width="295dp"
            android:layout_height="58dp"
            android:backgroundTint="#FFFFFF"
            android:hint="Last Name"
            android:textColorHint="#F6F3F3"
            app:boxBackgroundColor="#08091B"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="#F6F1F1"
            app:hintTextColor="#F3EFEF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.81">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textview12"
                android:layout_width="295dp"
                android:layout_height="58dp"
                android:inputType="textPersonName"
                android:textColor="#F6F4F4" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="294dp"
            android:layout_height="58dp"
            android:layout_marginStart="57dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="49dp"
            android:text="Next"
            android:background="#EB9F3E"
            android:textColor="#F8F5F5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutname12"
            app:layout_constraintVertical_bias="0.591" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
